{% extends 'base.html.twig' %}

{% block title %}BookLibrary index{% endblock %}

{% block body %}
    <h1>BookLibrary index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Book name</th>
                <th>Rented</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for book_library in book_libraries %}
            <tr>
                <td>{{ book_library.id }}</td>
                <td>{{ book_library.book.title }}</td>
                <td>{{ book_library.rented ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_book_library_show', {library: book_library.library.id ,'id': book_library.id}) }}">show</a>
                    <a href="{{ path('app_book_library_edit', {library: book_library.library.id, 'id': book_library.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_book_library_new', {library: library.id}) }}">Create new</a>
{% endblock %}
