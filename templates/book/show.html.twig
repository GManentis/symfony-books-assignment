{% extends 'base.html.twig' %}

{% block title %}Book{% endblock %}

{% block body %}
    <h1>Book</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ book.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ book.title }}</td>
            </tr>
            <tr>
                <th>Isbn</th>
                <td>{{ book.isbn }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ book.description }}</td>
            </tr>
            <tr>
                <th>Already Rented</th>
                <td>{{ book.rented ? "Yes" : "No" }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_book_index', { library: book.library.id }) }}">back to list</a>

    <a href="{{ path('app_book_edit', { 'id': book.id, library: book.library.id }) }}">edit</a>

    {{ include('book/_delete_form.html.twig') }}
{% endblock %}
